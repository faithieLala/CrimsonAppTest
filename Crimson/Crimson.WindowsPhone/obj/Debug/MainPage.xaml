<Page
    x:Class="Crimson.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Crimson"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    mc:Ignorable="d"
    Background="{StaticResource CustomBackground}">

    <Grid>
        
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="272*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="177*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppHeader" Grid.Row="0" Margin="0,-30,0,0" Height="70" 
              VerticalAlignment="Top" Background="{StaticResource DefaultThemeColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" Grid.Column="0">
                <TextBlock
            Text="C"
            Grid.Column="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Foreground="Red"
            TextWrapping="Wrap"
            Margin="10,0,4,0" FontSize="35"
            Height="50"
            VerticalAlignment="Top"
            />
                <TextBlock
            Text="rimson"
            Grid.Column="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Foreground="White"
            TextWrapping="Wrap"
            FontSize="35" Height="50"
            VerticalAlignment="Top"
            />
            </StackPanel>
            <Rectangle Fill="Red"
                       Grid.Column="1"
                           HorizontalAlignment="Right"
                       Width="200"
                           VerticalAlignment="Stretch"/>

            <!-- <Rectangle Fill="Yellow"
                       Grid.Column="2"
                           HorizontalAlignment="Right"
                       Width="200"
                           VerticalAlignment="Stretch"/> -->
            <Image Source="Assets/contacts.png" 
                   Grid.Column="2"
                   Margin="10,25,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>
            <Button x:ConnectionId='8'
               Grid.Column="2"
                   Margin="20,015,10,-10"
                Opacity="0.4"
                                      
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" 
                BorderThickness="0">

            </Button>
        </Grid>
        <Grid  Margin="0,40,0,0" x:Name="MapArea" Grid.Row="0">
            <Button x:ConnectionId='7'
                Margin="0,-10,0,-10"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                                  
                />
            <Maps:MapControl
                 x:Name="MalariaMap"
                 MapServiceToken="Place your token here."
                 Height="auto" Width="auto"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Margin="10"
                   />  
            <Rectangle Opacity="0.5" >
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>  </Rectangle>
              <TextBlock x:Name="Maintext" 
                       Opacity="0.3"
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap" 
                   Text="Map Area" 
                   FontSize="40"
                   FontFamily="Segoe UI"
                   Grid.Row="0" 
                   />
            <TextBlock
            Text=" MapZone"
            Grid.Column="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Foreground="White"
            TextWrapping="Wrap"
            FontSize="25" Height="auto"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            />
            <!-- -->
            
        </Grid>
        <Grid Grid.Row="1" x:Name="featuretab" Margin="0,5.333,0,0" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Rectangle
                Grid.Row="0" 
                Grid.Column="0"
                   VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="10,20,10.333,-0.333"
                Grid.RowSpan="2" 
                Fill="{StaticResource DefaultThemeColor}" 
                />
            <Rectangle
                Grid.Row="1" 
                Grid.Column="0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
               Height="50"
                Fill="White"/>
            <Rectangle
                Grid.Row="0" 
                Grid.Column="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="10,20,10.333,-0.333"
                Grid.RowSpan="2" 
                Fill="{StaticResource DefaultThemeColor}"/>
            <Rectangle
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
               Height="50"
                Fill="White"/>

            <Rectangle Grid.Row="0" 
                   Grid.Column="2"
                   Fill="{StaticResource DefaultThemeColor}"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"
                Margin="10,20,10.333,-0.333"
                Grid.RowSpan="2" 
                     />
            <Rectangle
                Grid.Row="1" 
                Grid.Column="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
                Height="50"
                Fill="White"/>

            <Rectangle Grid.Row="2" 
                   Grid.Column="0"
                   Fill="{StaticResource DefaultThemeColor}"
                   Margin="10,20,10.333,20"
                   Grid.RowSpan="2" 
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>
            <Rectangle
                Grid.Row="3" 
                Grid.Column="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
                Height="50"
                Fill="White"/>

            <Rectangle Grid.Row="2"
                   Grid.Column="1"
                   Fill="{StaticResource DefaultThemeColor}"
                   Margin="10,20,10.333,20"
                   Grid.RowSpan="2" 
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"
                   />
            <Rectangle
                Grid.Row="3" 
                Grid.Column="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
                Height="50"
                Fill="White"/>
            <Rectangle Grid.Row="2"
                   Grid.Column="2"
                   Fill="{StaticResource DefaultThemeColor}"
                   Margin="10,20,10.333,20"
                   Grid.RowSpan="2" 
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"
                   />
            <Rectangle
                Grid.Row="3" 
                Grid.Column="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Opacity="0.25"
                Height="50"
                Fill="White"/>

            <Image Grid.Row="0" 
               Grid.Column="0" 
               Source="Assets/CheckStatus.png" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
              Margin="20,20,20,-05"
               />
            <Image Grid.Row="0" 
               Grid.Column="1" 
               Source="Assets/Quickfacts.png" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Margin="20,20,20,-5"
               />

            <Image Grid.Row="2" 
               Grid.Column="0" 
               Source="Assets/database-48.png" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Margin="20,20,20,-5"
               
               />
            <Image Grid.Row="2" 
               Grid.Column="2" 
               Source="Assets/3d_touch-48.png" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Margin="20,20,20,-5"
               
     />
            <!-- -->

            <Button x:ConnectionId='1' 
            Height="auto" 
            Width="auto"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
                                BorderThickness="0" 
            Margin="0,11,4.333,-13.333" Grid.RowSpan="2"/>
            <Button x:ConnectionId='2' 
            Height="auto" 
            Width="auto"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
                                      BorderThickness="0" 
            Margin="0.667,11,1.667,-13.333" Grid.RowSpan="2" />
            <Button x:ConnectionId='3' 
            Height="auto" 
            Width="auto"
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                    BorderThickness="0" 
            Margin="0.333,11,1,-13.333" Grid.RowSpan="2" 
                
            />
            <Button x:ConnectionId='4' 
            Height="auto" 
            Width="auto"
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                    BorderThickness="0" 
            Margin="1,10.333,0.333,23.333" Grid.RowSpan="2" 
                
            />
            <Button x:ConnectionId='5' 
            Height="auto" 
            Width="auto"
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                  BorderThickness="0" 
            Margin="1,10.333,0.333,23.333" Grid.RowSpan="2" 
                
            />
            <Button x:ConnectionId='6' 
            Height="auto" 
            Width="auto"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
                                 BorderThickness="0" Margin="0.333,10.333,1,7.333" Grid.RowSpan="2"/>

            <TextBlock Text="Check Status" 
                       Style="{StaticResource FeatureTextphone}" 
                       Grid.Column="0"
                       Grid.Row="1"
                       Height="auto"      
                       Width="auto"
                       TextAlignment="Center"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Stretch"
                         Margin="0,0,0,-10"      
                       />
            <TextBlock Text="QuickFacts" 
                       Style="{StaticResource FeatureTextphone}"                      
                       Grid.Column="1" 
                       Grid.Row="1"
                       Height="auto"      
                       Width="auto"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,-10"/>
            <TextBlock Text="Analysis" Style="{StaticResource FeatureTextphone}" 
                       Grid.Column="0" Grid.Row="3"
                       Height="auto"      
                       Width="auto"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,10"/>
            <TextBlock Text="About" Style="{StaticResource FeatureTextphone}" 
                       Grid.Column="2" Grid.Row="3"
                       Height="auto"      
                       Width="auto"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,10"/>
            <!--  -->
        </Grid>
    </Grid>
</Page>

